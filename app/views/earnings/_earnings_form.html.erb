<h1>Earnings Form</h1>
<%= form_tag("/earnings", method: "get") do %>
  <%= label_tag("Insurance Cost") %>
  <%= number_field(:earnings, :insurance_cost, in: 1..50, step: 1) %>

  <%= label_tag("Mobile Plan Cost") %>
  <%= number_field(:earnings, :mobile_plan_cost, in: 1..50, step: 1) %>

  <%= label_tag("Fuel Cost / gallon ") %>
  <%= number_field(:earnings, :fuel_cost, in: 1..10, step: 1) %>  

  <%= label_tag("Commute Distance") %>
  <%= number_field(:earnings, :commute_distance, in: 1..100, step: 1) %>
  
  <%= label_tag("Days Per Week") %>
  <%= number_field(:earnings, :days_per_week, in: 1..7, step: 1) %>

  <%= label_tag("Hours Per Week") %>
  <%= number_field(:earnings, :hours_per_week, in: 1..60, step: 1) %>

  <%= submit_tag("Estimate Earnings") %>    
<% end %>
